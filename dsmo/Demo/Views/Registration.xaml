<UserControl x:Class="Demo.Views.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#2F3136" Padding="20" CornerRadius="10">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

        <TextBlock Text="Registration" FontSize="30" Foreground="White" Margin="0,0,0,20" />

        <TextBlock Text="Enter your Username" Foreground="White" Opacity="0.5" Margin="0,0,0,5" />
        <TextBox x:Name="txtUsername" Tag="Enter Name" Margin="0,0,0,10" Background="#40444B" Foreground="White" BorderThickness="1" BorderBrush="#36393F" />

        <TextBlock Text="Enter your Password" Foreground="White" Opacity="0.5" Margin="0,0,0,5" />
        <PasswordBox x:Name="txtPassword" Tag="Enter Password" Margin="0,0,0,15" Background="#40444B" Foreground="White" BorderThickness="1" BorderBrush="#36393F" />
            
        <TextBlock Text="" x:Name="status" Foreground="Red" Opacity="0.5" Margin="0,0,0,5" />
            
        <Button x:Name="btnSignUp" Content="Sign Up" Margin="0,0,0,15" Background="#5865F2" Foreground="White" BorderThickness="0" Height="35" Click="btnSignUp_Click" />

        <TextBlock FontWeight="Medium" TextDecorations="Underline" HorizontalAlignment="Center" Foreground="White">
            <Hyperlink x:Name="lnkLogin" Foreground="#00A8FC" FontWeight="Bold" TextDecorations="None" Click="btnSwitchLogin_Click">
                Login
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Border>
</UserControl>
