<Window x:Class="Messenger.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:local="clr-namespace:Messenger.Views"
        mc:Ignorable="d"
        Title="ProfileView" Height="800" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <hc:Gravatar Width="80"
                         Height="80"
                         Style="{StaticResource GravatarCircle}"
                         Grid.Column="0"/>
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Margin="5"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="Họ Và Tên"/>
                <TextBlock Margin="5"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Text="Trực tuyến lần cuối 10:23 AM"/>
            </StackPanel>
            <Button Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Height="36"
                    Width="36"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="3">
                <materialIcons:MaterialIcon Kind="Edit"
                                            Height="18"
                                            Width="18"/>
            </Button>
        </Grid>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}" Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <materialIcons:MaterialIcon Kind="Bio"
                                        Height="28"
                                        Width="28"
                                        Margin="5"
                                        Grid.Column="0" />
            <TextBlock Grid.Column="1"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Text="Nội dung tiểu sử"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="5"
                       Background="Transparent"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"/>
        </Grid>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}"
              Margin="0,5,0,5"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderThickness="0,1,0,1"
                    BorderBrush="{DynamicResource BorderBrush}">
                <Grid Margin="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="At"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Tên người dùng"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="@VoNguyenGiaHuy"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </Border>
            <Border Grid.Row="1"
                    BorderThickness="0,1,0,1"
                    BorderBrush="{DynamicResource BorderBrush}">
                <Grid Margin="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="EmailBox"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Email"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="kh0anh@protonmail.com"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </Border>
            <Border Grid.Row="2"
                    BorderThickness="0,1,0,1"
                    BorderBrush="{DynamicResource BorderBrush}">
                <Grid Margin="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="Call"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Số điện thoại"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="09199199199"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </Border>
            <Border Grid.Row="3"
                    BorderThickness="0,1,0,1"
                    BorderBrush="{DynamicResource BorderBrush}">
                <Grid Margin="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="DateRange"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Ngày tham gia"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="11/11/1111"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
