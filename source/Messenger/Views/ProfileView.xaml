<Window
    x:Class="Messenger.Views.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Messenger.ViewModels"
    Title="Xem hồ sơ"
    Width="400"
    Height="800"
    d:DataContext="{d:DesignInstance Type=viewmodels:ProfileViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Margin="0,0,0,5" Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
                <ColumnDefinition Width="36" />
            </Grid.ColumnDefinitions>
            <hc:Gravatar
                Grid.Column="0"
                Width="80"
                Height="80"
                Source="{Binding Avatar}"
                Style="{StaticResource GravatarCircle}" />
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock
                    Margin="5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding FullName}" />
                <TextBlock
                    Margin="5"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    Text="{Binding Activity}" />
            </StackPanel>
            <Button
                Grid.Column="2"
                Width="36"
                Height="36"
                Margin="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding Edit}">
                <materialIcons:MaterialIcon
                    Width="18"
                    Height="18"
                    Kind="Edit" />
            </Button>
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="0,5,0,5"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <materialIcons:MaterialIcon
                Grid.Column="0"
                Width="28"
                Height="28"
                Margin="5"
                Kind="Bio" />
            <TextBlock
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center"
                Background="Transparent"
                FontSize="14"
                Foreground="{DynamicResource SecondaryTextBrush}"
                Text="{Binding Bio}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
        </Grid>
        <Grid
            Grid.Row="2"
            Margin="0,5,0,5"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,2,0,1">
                <Grid
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="At" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Tên người dùng" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Path=Username, StringFormat='@{0}'}"
                        TextAlignment="Right" />
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Username}" Value="">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border
                Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,1">
                <Grid
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="EmailBox" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Email" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Email}" />
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Email}" Value="">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border
                Grid.Row="2"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,1">
                <Grid
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="Call" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Số điện thoại" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding PhoneNumber}"
                        TextAlignment="Right" />
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PhoneNumber}" Value="">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <Border
                Grid.Row="3"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,2">
                <Grid
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="DateRange" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Ngày tham gia" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding JoinDate}"
                        TextAlignment="Right" />
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding JoinDate}" Value="">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </Grid>
</Window>
