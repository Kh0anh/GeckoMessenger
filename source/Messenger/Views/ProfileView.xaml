<Window x:Class="Messenger.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:local="clr-namespace:Messenger.Views"
        mc:Ignorable="d"
        Title="ProfileView" Height="450" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <hc:Gravatar Width="80"
                         Height="80"
                         Style="{StaticResource GravatarCircle}"
                         Grid.Column="0"/>
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Margin="5"
                           FontSize="16"
                           FontWeight="Bold"
                           Text="Họ Và Tên"/>
                <TextBlock Margin="5"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Text="Trực tuyến lần cuối 10:23 AM"/>
            </StackPanel>
            <Button Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Height="36"
                    Width="36"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="3">
                <materialIcons:MaterialIcon Kind="Edit"
                                            Height="18"
                                            Width="18"/>
            </Button>
        </Grid>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}"
              Margin="0,5,0,5"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="15, 5,15,5"
                       Grid.Row="0">
                <Run Text="Đây là bio của tôi"
                     FontSize="13"/>
                <LineBreak/>
                <Run Text="Tiểu sử"
                     FontSize="13"
                     Foreground="{DynamicResource SecondaryTextBrush}"/>
            </TextBlock>
            <TextBlock Margin="15, 5,15,5"
                       Grid.Row="1">
                <Run Text="@kh0anh"
                     FontSize="13"
                     Foreground="{DynamicResource PrimaryBrush}"/>
                <LineBreak/>
                <Run Text="Tên người dùng"
                     FontSize="13"
                     Foreground="{DynamicResource SecondaryTextBrush}"/>
            </TextBlock>
            <TextBlock Margin="15, 5,15,5"
                       Grid.Row="2">
                <Run Text="test@email.com"
                     FontSize="13"/>
                <LineBreak/>
                <Run Text="Email"
                     FontSize="13"
                     Foreground="{DynamicResource SecondaryTextBrush}"/>
            </TextBlock>
            <TextBlock Margin="15, 5,15,5"
                       Grid.Row="3">
                <Run Text="0917288372"
                     FontSize="13"/>
                <LineBreak/>
                <Run Text="Số điện thoại"
                     FontSize="13"
                     Foreground="{DynamicResource SecondaryTextBrush}"/>
            </TextBlock>
            <TextBlock Margin="15, 5,15,5"
                       Grid.Row="4">
                <Run Text="{Binding Birthday, StringFormat='{}{0:dd/MM/yyyy}'}"
                     FontSize="13"/>
                <LineBreak/>
                <Run Text="Ngày sinh"
                     FontSize="13"
                     Foreground="{DynamicResource SecondaryTextBrush}"/>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
