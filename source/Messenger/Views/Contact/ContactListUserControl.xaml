<UserControl
     x:Class="Messenger.Views.Contact.ContactListUserControl"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:hc="https://handyorg.github.io/handycontrol"
     xmlns:local="clr-namespace:Messenger.Views.Contact"
     xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     d:DesignHeight="450"
     d:DesignWidth="800"
     mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid Background="{DynamicResource MainBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon Kind="Contact"
                                            Grid.Column="1"
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Left" />
                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center">
                    <Run Text="Danh sách liên hệ"
                         FontSize="14"
                         FontWeight="Medium" />
                </TextBlock>
            </Grid>
        </Border>
        <Grid Grid.Row="1"
              Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Liên hệ (3)"
                       Grid.Row="0"
                       FontSize="14"
                       FontWeight="Medium"
                       Margin="10" />
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          Grid.Row="1">
                <ListBox ItemsSource="{Binding Contacts}"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5"
                                    Margin="2"
                                    Background="{DynamicResource RegionBrush}"
                                    CornerRadius="5"
                                    HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <hc:Gravatar Margin="0,0,10,0"
                                                     Width="50"
                                                     Height="50"
                                                     Style="{StaticResource GravatarCircle}"
                                                     VerticalAlignment="Center" />

                                        <TextBlock Text="{Binding FullName}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   FontWeight="Medium"
                                                   FontSize="14"
                                                   VerticalAlignment="Center" />

                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="24"
                                            Height="32"
                                            Margin="0,-5,-5,0"
                                            x:Name="btContactContext"
                                            Click="ContactContextOpen_OnClick">
                                        <materialIcons:MaterialIcon Kind="DotsVertical"
                                                                    Width="18"
                                                                    Height="18" />
                                        <Button.ContextMenu>
                                            <ContextMenu Placement="Right"
                                                         VerticalOffset="-30"
                                                         HorizontalOffset="-260">
                                                <MenuItem Header="Thêm vào danh sách chặn"
                                                          Foreground="{DynamicResource DangerBrush}"
                                                          FontWeight="Medium"
                                                          FontSize="12">
                                                    <MenuItem.Icon>
                                                        <materialIcons:MaterialIcon Kind="Block"
                                                            Width="16"
                                                            Height="16" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Xoá liên hệ"
                                                          Foreground="{DynamicResource DangerBrush}"
                                                          FontWeight="Medium"
                                                          FontSize="12">
                                                    <MenuItem.Icon>
                                                        <materialIcons:MaterialIcon Kind="DeleteEmpty"
                                                            Width="16"
                                                            Height="16" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem"
                               BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="0"
                                                CornerRadius="5">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource SecondaryRegionBrush}" />
                                                <Setter TargetName="Bd" Property="BorderBrush"
                                                        Value="{DynamicResource BorderBrush}" />
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="1" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource SecondaryRegionBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>