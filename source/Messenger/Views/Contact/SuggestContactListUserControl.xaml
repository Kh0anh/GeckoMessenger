<UserControl
    x:Class="Messenger.Views.Contact.SuggestContactListUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Contact"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid Background="{DynamicResource MainBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <materialIcons:MaterialIcon
                    Grid.Column="1"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    Kind="UserPlus" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center">
                    <Run
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Danh sách đề xuất" />
                </TextBlock>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="10"
                FontSize="14"
                FontWeight="Medium"
                Text="Đề xuất" />
            <ScrollViewer
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
                <ListBox
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding SuggestContacts}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="2"
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                Background="{DynamicResource RegionBrush}"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <hc:Gravatar
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource GravatarCircle}" />

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            Text="{Binding FullName}" />

                                    </StackPanel>
                                    <Button
                                        Grid.Column="1"
                                        Width="80"
                                        Margin="5"
                                        Foreground="{DynamicResource PrimaryBrush}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon
                                                Width="14"
                                                Height="14"
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                Kind="UserAdd" />
                                            <TextBlock
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                FontWeight="Medium"
                                                Text="Thêm" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Grid.Column="2"
                                        Width="80"
                                        Margin="5"
                                        Foreground="{DynamicResource DangerBrush}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon
                                                Width="14"
                                                Height="14"
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                Kind="TrashCanEmpty" />
                                            <TextBlock
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                FontWeight="Medium"
                                                Text="Xoá" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            x:Name="Bd"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            CornerRadius="5">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="1" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>