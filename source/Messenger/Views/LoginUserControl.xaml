<UserControl x:Class="Messenger.Views.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Messenger.Views" xmlns:CC="clr-namespace:Messenger.Resouces.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="300">
            <TextBlock Text="Chào mừng trở lại!" 
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,3"/>
            <TextBlock Text="Rất vui khi được gặp lại bạn!" 
                       FontSize="18"
                       Opacity="0.8"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            <TextBlock FontSize="12" 
                       Margin="0,0,0,5">
                <Run Text="TÊN ĐĂNG NHẬP HOẶC EMAIL"/>
                <Run Text="*" Foreground="Red" FontWeight="Bold"/>
            </TextBlock>
        <TextBox Margin="0,0,0,10"
                     FontSize="16"
                     Height="32"
                     Opacity="0.8"
                     Text="{Binding username, Mode=OneWayToSource}"/>
        <TextBlock FontSize="12"
                       Margin="0,0,0,5">
                <Run Text="MẬT KHẨU"/>
                <Run Text="*" Foreground="Red" FontWeight="Bold"/>
            </TextBlock>
            <PasswordBox Margin="0,0,0,5"
                     Height="32"
                     FontSize="16"
                     Opacity="0.8"
                     x:Name="pwdPassword"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock HorizontalAlignment="Left">
                <Hyperlink FontWeight="Thin"
                           TextDecorations="None">
                    Quên mật khẩu?
                </Hyperlink>
            </TextBlock>
        <CC:RoundedButton Content="Đăng nhập"
                    BorderThickness="0"
                    FontSize="12"
                    Height="35"
                    Margin="0,8,0,10"
                    Command="{Binding LoginCommand}" 
                    Width="300"
                    Background="#0064e0"
                    Foreground="White"
                    CornerRadius="20"
                    HoverBackground="#3383e6"
                    OnClickBackground="#66a2ec"/>
        <TextBlock TextDecorations="None" 
                       HorizontalAlignment="Center">
                Chưa có tài khoản?
                <Hyperlink FontWeight="Bold"
                           TextDecorations="None"
                           Command="{Binding DataContext.SwitchToRegisterCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                    Đăng ký
                </Hyperlink>
            </TextBlock>
        </StackPanel>
</UserControl>
