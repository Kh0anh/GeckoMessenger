<UserControl x:Class="Messenger.Views.RegisterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="300">
        <TextBlock Text="Tạo tài khoản" 
                    FontSize="24" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20"/>
        <TextBlock FontSize="12" 
                    Margin="0,0,0,5">
             <Run Text="TÊN ĐĂNG NHẬP"/>
             <Run Text="*" Foreground="Red" FontWeight="Bold"/>
        </TextBlock>
        <TextBox Margin="0,0,0,10"
                  FontSize="16"
                  Height="32"
                  Opacity="0.8"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,0,5,0">
                <TextBlock FontSize="12" 
                           Margin="0,0,0,5">
                    <Run Text="TÊN"/>
                    <Run Text="*" Foreground="Red" FontWeight="Bold"/>
                </TextBlock>
                <TextBox 
                         FontSize="16"
                         Height="32"
                         Opacity="0.8"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Margin="5,0,0,0">
                <TextBlock FontSize="12" 
                           Margin="0,0,0,5">
                    <Run Text="HỌ"/>
                    <Run Text="*" Foreground="Red" FontWeight="Bold"/>
                </TextBlock>
                <TextBox 
                         FontSize="16"
                         Height="32"
                         Opacity="0.8"/>
            </StackPanel>
        </Grid>
        <TextBlock FontSize="12" 
                   Margin="0,0,0,5">
            <Run Text="EMAIL"/>
            <Run Text="*" Foreground="Red" FontWeight="Bold"/>
        </TextBlock>
        <TextBox Margin="0,0,0,10"
                 FontSize="16"
                 Height="32"
                 Opacity="0.8"/>
        <TextBlock FontSize="12" 
                   Margin="0,0,0,5">
            <Run Text="SỐ ĐIỆN THOẠI"/>
        </TextBlock>
        <TextBox Margin="0,0,0,10"
                 FontSize="16"
                 Height="32"
                 Opacity="0.8"/>
        <TextBlock FontSize="12"
                    Margin="0,0,0,5">
             <Run Text="MẬT KHẨU"/>
             <Run Text="*" Foreground="Red" FontWeight="Bold"/>
        </TextBlock>
        <PasswordBox Margin="0,0,0,10"
                  Height="32"
                  FontSize="16"
                  Opacity="0.8"/>
        <Button Content="Tiếp tục"
                 FontWeight="Bold"
                 BorderThickness="0"
                 FontSize="12"
                 Height="35"
                 Margin="0,0,0,15"/>
        <TextBlock TextDecorations="Underline" 
                    HorizontalAlignment="Center">
             <Hyperlink FontWeight="Bold"
                        TextDecorations="None"
                        Command="{Binding DataContext.SwitchToLoginCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                 Tôi đã có tài khoản?
             </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>