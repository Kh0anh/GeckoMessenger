<Window
    x:Class="Messenger.Views.CreateGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tạo nhóm"
    Width="400"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Row="1"
                Margin="0,0,0,5"
                Background="{DynamicResource MainContentBackgroundBrush}">
                <hc:Gravatar
                    Grid.Column="0"
                    Width="100"
                    Height="100"
                    Source="{Binding Avatar}"
                    Style="{StaticResource GravatarCircle}" />
                <Button
                    x:Name="OpenEditImageContext"
                    Width="46"
                    Height="46"
                    Margin="70,70,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource PrimaryBrush}"
                    BorderThickness="0"
                    Click="OpenEditImageContext_Click"
                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Width="32"
                                Height="32"
                                Background="{TemplateBinding Background}"
                                CornerRadius="25">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <materialIcons:MaterialIcon
                        Width="18"
                        Height="18"
                        Foreground="White"
                        Kind="Camera" />
                    <Button.ContextMenu>
                        <ContextMenu
                            HorizontalOffset="30"
                            Placement="Right"
                            VerticalOffset="-30">
                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.SelectAvatarCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                FontSize="14"
                                FontWeight="Medium"
                                Header="Chọn ảnh">
                                <MenuItem.Icon>
                                    <materialIcons:MaterialIcon
                                        Width="18"
                                        Height="18"
                                        Kind="Image" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.RemoveAvatarCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{DynamicResource DangerBrush}"
                                Header="Xoá ảnh">
                                <MenuItem.Icon>
                                    <materialIcons:MaterialIcon
                                        Width="18"
                                        Height="18"
                                        Kind="DeleteEmpty" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <TextBox
                    Height="66"
                    Margin="0,0,10,20"
                    hc:InfoElement.Necessary="True"
                    hc:InfoElement.Title="TÊN NHÓM"
                    hc:InfoElement.TitlePlacement="Top"
                    FontSize="14"
                    Style="{StaticResource TextBoxExtend}"
                    Text="{Binding GroupName, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">
            <TextBlock
                Grid.Row="0"
                Margin="10"
                FontSize="14"
                FontWeight="Medium">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Thành viên ({0})">
                        <Binding Path="SelectedCount" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <ScrollViewer
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
                <ListBox
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding GroupContacts}"
                    SelectedItem="{Binding SelectedGroupContact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="2,5,2,5"
                                Padding="5"
                                Background="{DynamicResource RegionBrush}"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <hc:Gravatar
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,10,0"
                                            Source="{Binding UserAvatar}"
                                            Style="{StaticResource GravatarCircle}" />

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            Text="{Binding UserFullName}" />
                                    </StackPanel>
                                    <Button
                                        Grid.Column="1"
                                        Width="60"
                                        Height="36"
                                        Command="{Binding DataContext.ChangeSelectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        FontSize="14"
                                        FontWeight="Medium">
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}" />
                                                        <Setter Property="Content" Value="Hủy" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
                                                        <Setter Property="Content" Value="Thêm" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            x:Name="Bd"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="0"
                                            CornerRadius="5">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </StackPanel>
        <Grid
            Grid.Row="2"
            Margin="0,5,0,0"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Button
                Width="80"
                Height="36"
                Margin="5"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="Hủy"
                FontSize="14"
                FontWeight="Medium"
                Foreground="{DynamicResource DangerBrush}" />
            <Button
                Grid.Column="1"
                Width="80"
                Height="36"
                Margin="5"
                Command="{Binding NewGroupCommand}"
                Content="Tạo"
                FontSize="14"
                FontWeight="Medium"
                Style="{StaticResource ButtonPrimary}" />
        </Grid>
    </Grid>
</Window>