<UserControl
    x:Class="Messenger.Views.Inbox.AIChatUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Inbox"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="46" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0" Background="{DynamicResource MainBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center">
                    <Run
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="Gecko AI" />
                </TextBlock>
            </Grid>

            <!--  Search message  -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleSearchMessage}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <hc:TextBox
                    Grid.Column="0"
                    Padding="5"
                    hc:InfoElement.Placeholder="Tìm kiếm tin nhắn"
                    FontSize="14" />
                <StackPanel
                    Grid.Column="1"
                    Margin="5,0,5,0"
                    Orientation="Horizontal">
                    <Button Margin="5,0,5,0">
                        <materialIcons:MaterialIcon Kind="ArrowUp" />
                    </Button>
                    <Button Margin="5,0,5,0">
                        <materialIcons:MaterialIcon Kind="ArrowDown" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  View messages  -->
            <Grid Grid.Row="2">
                <ScrollViewer
                    x:Name="MessagesScrollViewer"
                    Background="{DynamicResource SecondaryRegionBrush}"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}">
                                    <ContentControl.Resources>
                                        <Style x:Key="MessageContextStyle" TargetType="StackPanel">
                                            <Setter Property="Opacity" Value="0" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="100" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Resources>
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Role}" Value="model">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <hc:Gravatar
                                                                            Grid.Column="0"
                                                                            Width="30"
                                                                            Height="30"
                                                                            Margin="5,0,5,0"
                                                                            VerticalAlignment="Top"
                                                                            Source="{Binding DataContext.Avatar, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Style="{StaticResource GravatarCircle}" />
                                                                        <Border
                                                                            Grid.Column="1"
                                                                            Margin="5"
                                                                            Padding="6"
                                                                            Background="{DynamicResource MainContentBackgroundBrush}"
                                                                            CornerRadius="5">
                                                                            <StackPanel>
                                                                                <TextBlock
                                                                                    x:Name="MessageText"
                                                                                    FontSize="14"
                                                                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                                                                    Text="{Binding Content}">
                                                                                    <TextBlock.Style>
                                                                                        <Style TargetType="TextBlock">
                                                                                            <Setter Property="Text" Value="{Binding Content}" />
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding Content}" Value="">
                                                                                                    <Setter Property="Text" Value="" />
                                                                                                    <Setter Property="FontWeight" Value="Bold" />
                                                                                                    <DataTrigger.EnterActions>
                                                                                                        <BeginStoryboard x:Name="TypingStoryboard">
                                                                                                            <Storyboard RepeatBehavior="Forever">
                                                                                                                <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:1.2">
                                                                                                                    <DiscreteStringKeyFrame KeyTime="0:0:0.3" Value="." />
                                                                                                                    <DiscreteStringKeyFrame KeyTime="0:0:0.6" Value=".." />
                                                                                                                    <DiscreteStringKeyFrame KeyTime="0:0:0.9" Value="..." />
                                                                                                                </StringAnimationUsingKeyFrames>
                                                                                                            </Storyboard>
                                                                                                        </BeginStoryboard>
                                                                                                    </DataTrigger.EnterActions>
                                                                                                    <DataTrigger.ExitActions>
                                                                                                        <RemoveStoryboard BeginStoryboardName="TypingStoryboard" />
                                                                                                    </DataTrigger.ExitActions>
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </TextBlock.Style>
                                                                                </TextBlock>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </Grid>
                                                                    <ItemsControl
                                                                        Grid.Row="1"
                                                                        HorizontalAlignment="Left"
                                                                        ItemsSource="{Binding Photos}">
                                                                        <ItemsControl.Style>
                                                                            <Style TargetType="ItemsControl">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Photos.Length}" Value="0">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ItemsControl.Style>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Grid x:Name="ViewPhotoItem">
                                                                                    <Grid.Style>
                                                                                        <Style TargetType="Grid">
                                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                                            <Style.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                                </Trigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Grid.Style>
                                                                                    <Image
                                                                                        Height="330"
                                                                                        Margin="45,0,0,0"
                                                                                        Source="{Binding Image}" />
                                                                                    <Button
                                                                                        Width="28"
                                                                                        Height="28"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        hc:BorderElement.CornerRadius="20"
                                                                                        Background="{DynamicResource PrimaryBrush}"
                                                                                        BorderThickness="0"
                                                                                        Command="{Binding DataContext.SaveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        CommandParameter="{Binding}"
                                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                        ToolTip="Xoá"
                                                                                        Visibility="{Binding ElementName=ViewPhotoItem, Path=Tag}">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="16"
                                                                                            Height="16"
                                                                                            Kind="Download" />
                                                                                    </Button>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                    <ItemsControl
                                                                        Grid.Row="2"
                                                                        Margin="40,0,0,0"
                                                                        ItemsSource="{Binding Files}">
                                                                        <ItemsControl.Style>
                                                                            <Style TargetType="ItemsControl">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Files.Length}" Value="0">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ItemsControl.Style>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Grid x:Name="ViewAttachmentItem">
                                                                                    <Grid.Style>
                                                                                        <Style TargetType="Grid">
                                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                                            <Style.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                                </Trigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Grid.Style>
                                                                                    <StackPanel Margin="5" HorizontalAlignment="Left">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="80"
                                                                                            Height="80"
                                                                                            HorizontalAlignment="Center"
                                                                                            Kind="File" />
                                                                                        <TextBlock
                                                                                            MaxWidth="230"
                                                                                            HorizontalAlignment="Right"
                                                                                            Text="{Binding FileName}"
                                                                                            TextWrapping="Wrap" />
                                                                                    </StackPanel>
                                                                                    <Button
                                                                                        Width="28"
                                                                                        Height="28"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        hc:BorderElement.CornerRadius="20"
                                                                                        Background="{DynamicResource PrimaryBrush}"
                                                                                        BorderThickness="0"
                                                                                        Command="{Binding DataContext.SaveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        CommandParameter="{Binding}"
                                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                        ToolTip="Xoá"
                                                                                        Visibility="{Binding ElementName=ViewAttachmentItem, Path=Tag}">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="16"
                                                                                            Height="16"
                                                                                            Kind="Download" />
                                                                                    </Button>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Role}" Value="user">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Grid HorizontalAlignment="Right">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Row="0" HorizontalAlignment="Right">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Grid.Style>
                                                                            <Style TargetType="Grid">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Content}" Value="">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Grid.Style>
                                                                        <StackPanel
                                                                            Grid.Column="0"
                                                                            Orientation="Horizontal"
                                                                            Style="{StaticResource MessageContextStyle}">
                                                                            <Button
                                                                                Width="28"
                                                                                Height="28"
                                                                                hc:BorderElement.CornerRadius="20"
                                                                                Background="{DynamicResource DangerBrush}"
                                                                                BorderThickness="0"
                                                                                Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                ToolTip="Xoá">
                                                                                <materialIcons:MaterialIcon
                                                                                    Width="16"
                                                                                    Height="16"
                                                                                    Kind="AlertCircle" />
                                                                            </Button>
                                                                            <Button
                                                                                Width="28"
                                                                                Height="28"
                                                                                Margin="5"
                                                                                hc:BorderElement.CornerRadius="20"
                                                                                Background="{DynamicResource DangerBrush}"
                                                                                BorderThickness="0"
                                                                                Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                ToolTip="Xoá">
                                                                                <materialIcons:MaterialIcon
                                                                                    Width="16"
                                                                                    Height="16"
                                                                                    Kind="TrashEmpty" />
                                                                            </Button>
                                                                        </StackPanel>
                                                                        <Border
                                                                            Grid.Column="1"
                                                                            Margin="5"
                                                                            Padding="6"
                                                                            Background="{DynamicResource MainContentBackgroundBrush}"
                                                                            CornerRadius="5">
                                                                            <StackPanel>
                                                                                <TextBlock
                                                                                    FontSize="14"
                                                                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                                                                    Text="{Binding Content}" />
                                                                                <TextBlock
                                                                                    HorizontalAlignment="Right"
                                                                                    FontSize="10"
                                                                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                                                                    Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" />
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </Grid>
                                                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Photos}">
                                                                        <ItemsControl.Style>
                                                                            <Style TargetType="ItemsControl">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Photos.Length}" Value="0">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ItemsControl.Style>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Grid x:Name="ViewPhotoItem" HorizontalAlignment="Right">
                                                                                    <Grid.Style>
                                                                                        <Style TargetType="Grid">
                                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                                            <Style.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                                </Trigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Grid.Style>
                                                                                    <Image
                                                                                        Width="auto"
                                                                                        Height="330"
                                                                                        Margin="5"
                                                                                        HorizontalAlignment="Right"
                                                                                        Source="{Binding Image}" />
                                                                                    <Button
                                                                                        Width="28"
                                                                                        Height="28"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        hc:BorderElement.CornerRadius="20"
                                                                                        Background="{DynamicResource PrimaryBrush}"
                                                                                        BorderThickness="0"
                                                                                        Command="{Binding DataContext.SaveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        CommandParameter="{Binding}"
                                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                        ToolTip="Xoá"
                                                                                        Visibility="{Binding ElementName=ViewPhotoItem, Path=Tag}">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="16"
                                                                                            Height="16"
                                                                                            Kind="Download" />
                                                                                    </Button>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Files}">
                                                                        <ItemsControl.Style>
                                                                            <Style TargetType="ItemsControl">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Files.Length}" Value="0">
                                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ItemsControl.Style>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Grid x:Name="ViewAttachmentItem">
                                                                                    <Grid.Style>
                                                                                        <Style TargetType="Grid">
                                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                                            <Style.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                                </Trigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Grid.Style>
                                                                                    <StackPanel Margin="5" HorizontalAlignment="Right">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="80"
                                                                                            Height="80"
                                                                                            HorizontalAlignment="Center"
                                                                                            Kind="File" />
                                                                                        <TextBlock
                                                                                            MaxWidth="230"
                                                                                            HorizontalAlignment="Right"
                                                                                            Text="{Binding FileName}"
                                                                                            TextWrapping="Wrap" />
                                                                                    </StackPanel>
                                                                                    <Button
                                                                                        Width="28"
                                                                                        Height="28"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        hc:BorderElement.CornerRadius="20"
                                                                                        Background="{DynamicResource PrimaryBrush}"
                                                                                        BorderThickness="0"
                                                                                        Command="{Binding DataContext.SaveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        CommandParameter="{Binding}"
                                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                                        ToolTip="Xoá"
                                                                                        Visibility="{Binding ElementName=ViewAttachmentItem, Path=Tag}">
                                                                                        <materialIcons:MaterialIcon
                                                                                            Width="16"
                                                                                            Height="16"
                                                                                            Kind="Download" />
                                                                                    </Button>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!--  Attachments  -->
            <Grid Grid.Row="3">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Attachments.Count}" Value="0">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Attachments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding FileType}" Value="PHOTO">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Grid x:Name="Item" Margin="5">
                                                                    <Grid.Style>
                                                                        <Style TargetType="Grid">
                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Grid.Style>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                    </Grid.ColumnDefinitions>
                                                                    <StackPanel>
                                                                        <Image
                                                                            Width="50"
                                                                            Height="50"
                                                                            Source="{Binding Thumnail}" />
                                                                        <TextBlock Margin="5" Text="{Binding FileName}" />
                                                                    </StackPanel>
                                                                    <Button
                                                                        Width="28"
                                                                        Height="28"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        hc:BorderElement.CornerRadius="20"
                                                                        Background="{DynamicResource DangerBrush}"
                                                                        BorderThickness="0"
                                                                        Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"
                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                        ToolTip="Xoá"
                                                                        Visibility="{Binding ElementName=Item, Path=Tag}">
                                                                        <materialIcons:MaterialIcon
                                                                            Width="16"
                                                                            Height="16"
                                                                            Kind="TrashEmpty" />
                                                                    </Button>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding FileType}" Value="FILE">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Grid x:Name="Item" Margin="5">
                                                                    <Grid.Style>
                                                                        <Style TargetType="Grid">
                                                                            <Setter Property="Tag" Value="Hidden" />
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Tag" Value="Visible" />
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Grid.Style>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                    </Grid.ColumnDefinitions>
                                                                    <StackPanel>
                                                                        <materialIcons:MaterialIcon
                                                                            Width="50"
                                                                            Height="50"
                                                                            Kind="File" />
                                                                        <TextBlock Margin="5" Text="{Binding FileName}" />
                                                                    </StackPanel>
                                                                    <Button
                                                                        Width="28"
                                                                        Height="28"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        hc:BorderElement.CornerRadius="20"
                                                                        Background="{DynamicResource DangerBrush}"
                                                                        BorderThickness="0"
                                                                        Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"
                                                                        Foreground="{DynamicResource MainContentBackgroundBrush}"
                                                                        ToolTip="Xoá"
                                                                        Visibility="{Binding ElementName=Item, Path=Tag}">
                                                                        <materialIcons:MaterialIcon
                                                                            Width="16"
                                                                            Height="16"
                                                                            Kind="TrashEmpty" />
                                                                    </Button>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!--  send message  -->
            <Grid Grid.Row="4" Background="{DynamicResource MainBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsStarted}" Value="False">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <TextBox
                    Grid.Column="0"
                    MinHeight="36"
                    MaxHeight="120"
                    Margin="5"
                    Padding="15,0,0,0"
                    hc:BorderElement.CornerRadius="20"
                    hc:InfoElement.Placeholder="{Binding FullName, StringFormat='Nhắn tin tới {0}'}"
                    AcceptsReturn="True"
                    BorderThickness="0"
                    FontSize="14"
                    Style="{DynamicResource TextBoxExtend}"
                    Text="{Binding NewMessageText, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Grid.Column="3"
                    Width="50"
                    Height="36"
                    BorderBrush="Transparent"
                    Command="{Binding SendMessageCommand}">
                    <materialIcons:MaterialIcon
                        Width="20"
                        Height="20"
                        Kind="Send" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
