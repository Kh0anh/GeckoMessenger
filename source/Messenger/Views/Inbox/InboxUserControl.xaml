<UserControl x:Class="Messenger.Views.Inbox.InboxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Messenger.Views.Inbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- Inbox -->
        <Border Grid.Column="0"
                Background="{DynamicResource SecondaryRegionBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Searchbar -->
                <hc:SearchBar Grid.Row="0"
                      Style="{StaticResource SearchBarPlus}"
                      hc:InfoElement.Placeholder="Tìm kiếm"
                      Height="40"
                      Margin="10,10,10,5"
                      FontSize="14"
                      Background="{DynamicResource MainContentBackgroundBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      hc:BorderElement.CornerRadius="5"/>

                <!-- Inbox -->
                
            </Grid>
        </Border>
        <ContentControl Content="{Binding CurrentChat}"
                        Grid.Column="1"/>
    </Grid>
</UserControl>