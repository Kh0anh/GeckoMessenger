<UserControl x:Class="Messenger.Views.Inbox.InboxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Messenger.Views.Inbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- Inbox -->
        <Border Grid.Column="0"
                Background="{DynamicResource SecondaryRegionBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Searchbar -->
                <hc:SearchBar Grid.Row="0"
                      Style="{StaticResource SearchBarPlus}"
                      hc:InfoElement.Placeholder="Tìm kiếm"
                      Height="40"
                      Margin="10,10,10,5"
                      FontSize="14"
                      Background="{DynamicResource MainContentBackgroundBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      hc:BorderElement.CornerRadius="5"/>

                <!-- Inbox -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding Conversations}"
                             SelectedItem="{Binding SelectedConversation}"
                             Background="Transparent"
                             BorderThickness="0"
                             HorizontalAlignment="Stretch"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="5" 
                                        Margin="2"
                                        Background="{DynamicResource RegionBrush}"
                                        CornerRadius="5"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <hc:Gravatar Margin="0,0,10,0"
                                                     Width="40"
                                                     Height="40"
                                                     Style="{StaticResource GravatarCircle}"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ConversationName}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding LatestMessageContent}"  
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding LatestMessage, StringFormat=\{0:dd/MM/yyyy HH:mm\}}"
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Chat Area -->
        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentChat}"/>
    </Grid>
</UserControl>