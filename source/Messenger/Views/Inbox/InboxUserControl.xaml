<UserControl
    x:Class="Messenger.Views.Inbox.InboxUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Inbox"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!--  Inbox  -->
        <Border
            Grid.Column="0"
            Background="{DynamicResource MainBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <hc:AutoCompleteTextBox
                    Height="40"
                    Margin="10,10,10,5"
                    hc:BorderElement.CornerRadius="5"
                    hc:InfoElement.Placeholder="Tìm kiếm"
                    Background="{DynamicResource MainBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    FontSize="14"
                    ItemsSource="{Binding Conversations}"
                    SelectionChanged="AutoCompleteTextBox_SelectionChanged"
                    StaysOpenOnEdit="False"
                    Text="{Binding Search, Mode=TwoWay}">
                    <hc:AutoCompleteTextBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <hc:Gravatar
                                    Grid.Column="0"
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,5,0"
                                    Source="{Binding ConversationAvatar}"
                                    Style="{StaticResource GravatarCircle}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding ConversationName}" />
                            </Grid>
                        </DataTemplate>
                    </hc:AutoCompleteTextBox.ItemTemplate>
                </hc:AutoCompleteTextBox>

                <!--  Inbox  -->
                <ScrollViewer
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalScrollBarVisibility="Auto">
                    <ListBox
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding Conversations}"
                        SelectedItem="{Binding SelectedConversation}"
                        Style="{DynamicResource ListBoxBaseStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="10"
                                    HorizontalAlignment="Stretch"
                                    Background="{DynamicResource MainContentBackgroundBrush}"
                                    CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <hc:Gravatar
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,5,0"
                                            Source="{Binding ConversationAvatar}"
                                            Style="{StaticResource GravatarCircle}" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                Text="{Binding ConversationName}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                Text="{Binding LatestMessageContent}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource SecondaryTextBrush}"
                                                Text="{Binding LatestMessage, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" />
                                        </StackPanel>
                                        <Button
                                            x:Name="btConversationContext"
                                            Grid.Column="1"
                                            Width="24"
                                            Height="32"
                                            Margin="0,-10,-10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ConversationContext_OnClick">
                                            <materialIcons:MaterialIcon
                                                Width="18"
                                                Height="18"
                                                Kind="DotsVertical" />
                                            <Button.ContextMenu>
                                                <ContextMenu
                                                    HorizontalOffset="20"
                                                    Placement="Right"
                                                    VerticalOffset="-40">
                                                    <MenuItem
                                                        FontSize="12"
                                                        FontWeight="Medium"
                                                        Foreground="{DynamicResource PrimaryBrush}"
                                                        Header="Đánh dấu đã xem">
                                                        <MenuItem.Icon>
                                                            <materialIcons:MaterialIcon
                                                                Width="16"
                                                                Height="16"
                                                                Kind="Tick" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem
                                                        FontSize="12"
                                                        FontWeight="Medium"
                                                        Foreground="{DynamicResource DangerBrush}"
                                                        Header="Chặn người dùng">
                                                        <MenuItem.Icon>
                                                            <materialIcons:MaterialIcon
                                                                Width="16"
                                                                Height="16"
                                                                Kind="Block" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem
                                                        FontSize="12"
                                                        FontWeight="Medium"
                                                        Foreground="{DynamicResource DangerBrush}"
                                                        Header="Xoá cuộc trò chuyện">
                                                        <MenuItem.Icon>
                                                            <materialIcons:MaterialIcon
                                                                Width="16"
                                                                Height="16"
                                                                Kind="DeleteEmpty" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border
                                                x:Name="Bd"
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                CornerRadius="5">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="1" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--  Chat Area  -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentChat}" />
    </Grid>
</UserControl>