<UserControl
    x:Class="Messenger.Views.Settings.SettingsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Settings"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Margin="0,0,0,5" Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <hc:Gravatar
                Grid.Column="0"
                Width="100"
                Height="100"
                Source="{Binding Avatar}"
                Style="{StaticResource GravatarCircle}" />
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Text="{Binding FullName}" />
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SecondaryTextBrush}"
                    Text="{Binding Username, StringFormat='@{0}'}" />
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="0,5,0,0"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource InfoBrush}" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Button
                Grid.Row="0"
                Height="42"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToEditProfileCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                Foreground="{DynamicResource PrimaryTextBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon
                        Width="28"
                        Height="28"
                        Margin="0,0,5,0"
                        Kind="AccountBoxEditOutline" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Chỉnh sửa trang cá nhân" />
                </StackPanel>
            </Button>
            <Button
                Grid.Row="1"
                Height="42"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToEditPrivacyCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                Foreground="{DynamicResource PrimaryTextBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon
                        Width="28"
                        Height="28"
                        Margin="0,0,5,0"
                        Kind="Lock" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Chỉnh sửa quyền riêng tư" />
                </StackPanel>
            </Button>
            <Button
                Grid.Row="2"
                Height="42"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToChangePasswordCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                Foreground="{DynamicResource PrimaryTextBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialIcons:MaterialIcon
                        Width="28"
                        Height="28"
                        Margin="0,0,5,0"
                        Kind="LockReset" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Đổi mật khẩu" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
