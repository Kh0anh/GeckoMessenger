<UserControl
    x:Class="Messenger.Views.Settings.EditProfileUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Settings"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Messenger.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditProfileViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="140" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource MainContentBackgroundBrush}">
            <Button
                Width="50"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToMainCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                <materialIcons:MaterialIcon
                    Width="24"
                    Height="24"
                    Kind="KeyboardReturn" />
            </Button>
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="0,0,0,5"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <hc:Gravatar
                Grid.Column="0"
                Width="100"
                Height="100"
                Source="{Binding Avatar}"
                Style="{StaticResource GravatarCircle}" />
            <Button
                x:Name="OpenEditImageContext"
                Width="46"
                Height="46"
                Margin="70,70,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{DynamicResource PrimaryBrush}"
                BorderThickness="0"
                Click="OpenEditImageContext_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="32"
                            Height="32"
                            Background="{TemplateBinding Background}"
                            CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <materialIcons:MaterialIcon
                    Width="18"
                    Height="18"
                    Foreground="White"
                    Kind="Camera" />
                <Button.ContextMenu>
                    <ContextMenu
                        HorizontalOffset="30"
                        Placement="Right"
                        VerticalOffset="-30">
                        <MenuItem
                            FontSize="14"
                            FontWeight="Medium"
                            Header="Chọn ảnh">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon
                                    Width="18"
                                    Height="18"
                                    Kind="Image" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            FontSize="14"
                            FontWeight="Medium"
                            Header="Chụp ảnh">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon
                                    Width="18"
                                    Height="18"
                                    Kind="Camera" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="{DynamicResource DangerBrush}"
                            Header="Xoá ảnh">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon
                                    Width="18"
                                    Height="18"
                                    Kind="DeleteEmpty" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>

        <Grid
            Grid.Row="2"
            Margin="0,5,0,5"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <materialIcons:MaterialIcon
                Grid.Column="0"
                Width="28"
                Height="28"
                Margin="5"
                Kind="Bio" />
            <TextBox
                Grid.Column="1"
                hc:InfoElement.Placeholder="{Binding Bio}"
                Background="Transparent"
                BorderThickness="0"
                FontSize="14"
                Style="{StaticResource TextBoxExtend}" />
        </Grid>

        <StackPanel
            Grid.Row="3"
            Margin="0,5,0,0"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <ToggleButton
                x:Name="ToggleUsernameEdit"
                Height="46"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="At" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0,5,154,0"
                        VerticalAlignment="Top"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Tên người dùng" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='@{0}'}"
                        TextAlignment="Right" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleUsernameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox
                        Height="36"
                        Margin="5"
                        Padding="25,0,0,0"
                        hc:InfoElement.Necessary="True"
                        hc:InfoElement.Placeholder="Tên người dùng"
                        FontSize="14"
                        Style="{StaticResource TextBoxExtend}">
                        <hc:TextBox.Text>
                            <Binding Path="EditUsername" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule ErrorContent="Định dạng tên người dùng sai" Pattern="^[a-zA-Z0-9._]{3,32}$" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                    <TextBlock
                        Width="16"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="@" />
                </Grid>
                <DockPanel
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right">
                    <Button
                        Width="50"
                        Height="32"
                        Margin="0,0,10,0"
                        Content="Huỷ"
                        FontSize="14">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleUsernameEdit" Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Width="50"
                        Height="32"
                        Command="{Binding SaveProfile}"
                        Content="Lưu"
                        FontSize="14" />
                </DockPanel>
            </Grid>
            <ToggleButton
                x:Name="ToggleFullNameEdit"
                Height="46"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="AccountCircle" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Họ và tên" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Fullname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleFullNameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleFullNameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Height="36"
                        Margin="5"
                        hc:InfoElement.Placeholder="Họ"
                        FontSize="14"
                        Style="{StaticResource TextBoxExtend}"
                        Text="{Binding EditLastname, Mode=TwoWay}" />
                    <TextBox
                        Grid.Column="1"
                        Height="36"
                        Margin="5"
                        hc:InfoElement.Placeholder="Tên"
                        FontSize="14"
                        Style="{StaticResource TextBoxExtend}"
                        Text="{Binding EditFirstname, Mode=TwoWay}" />
                </Grid>
                <DockPanel
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right">
                    <Button
                        Width="50"
                        Height="32"
                        Margin="0,0,10,0"
                        Content="Huỷ"
                        FontSize="14">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleFullNameEdit" Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Width="50"
                        Height="32"
                        Command="{Binding SaveProfile}"
                        Content="Lưu"
                        FontSize="14" />
                </DockPanel>
            </Grid>
            <ToggleButton
                x:Name="ToggleEmailEdit"
                Height="46"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="EmailBox" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Email" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleEmailEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox
                        Height="36"
                        Margin="5"
                        hc:InfoElement.Necessary="True"
                        hc:InfoElement.Placeholder="Email"
                        FontSize="14"
                        Style="{StaticResource TextBoxExtend}">
                        <hc:TextBox.Text>
                            <Binding Path="EditEmail" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule ErrorContent="Định dạng email sai" Type="Mail" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                </Grid>
                <DockPanel
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right">
                    <Button
                        Width="50"
                        Height="32"
                        Margin="0,0,10,0"
                        Content="Huỷ"
                        FontSize="14">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleEmailEdit" Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Width="50"
                        Height="32"
                        Command="{Binding SaveProfile}"
                        Content="Lưu"
                        FontSize="14" />
                </DockPanel>
            </Grid>
            <ToggleButton
                x:Name="TogglePhoneNumberEdit"
                Height="46"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="Call" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Số điện thoại" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=TogglePhoneNumberEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox
                        Height="36"
                        Margin="5"
                        hc:InfoElement.Necessary="True"
                        hc:InfoElement.Placeholder="Số điện thoại"
                        FontSize="14"
                        Style="{StaticResource TextBoxExtend}">
                        <hc:TextBox.Text>
                            <Binding Path="EditPhoneNumber" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule ErrorContent="Định dạng số điện thoại sai" Pattern="^(\+84|0)(3|5|7|8|9)\d{8}$" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                </Grid>
                <DockPanel
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right">
                    <Button
                        Width="50"
                        Height="32"
                        Margin="0,0,10,0"
                        Content="Huỷ"
                        FontSize="14">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="TogglePhoneNumberEdit" Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Width="50"
                        Height="32"
                        Command="{Binding SaveProfile}"
                        Content="Lưu"
                        FontSize="14" />
                </DockPanel>
            </Grid>
            <ToggleButton
                x:Name="ToggleBirthdayEdit"
                Height="46"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch">
                <Grid Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon
                        Grid.Column="0"
                        Width="28"
                        Height="28"
                        Margin="3,0,10,0"
                        Kind="Cake" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="Ngày sinh" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Medium"
                        Text="{Binding Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleBirthdayEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:DatePicker
                        Margin="5"
                        Padding="8"
                        FontSize="14"
                        SelectedDate="{Binding EditBirthday, Mode=TwoWay}" />
                </Grid>
                <DockPanel
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Right">
                    <Button
                        Width="50"
                        Height="32"
                        Margin="0,0,10,0"
                        Content="Huỷ"
                        FontSize="14">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleBirthdayEdit" Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Width="50"
                        Height="32"
                        Command="{Binding SaveProfile}"
                        Content="Lưu"
                        FontSize="14" />
                </DockPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>