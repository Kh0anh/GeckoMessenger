<UserControl x:Class="Messenger.Views.Settings.EditProfileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Messenger.Views.Settings"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="140" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Background="{DynamicResource MainContentBackgroundBrush}" Grid.Row="0">
            <Button HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Width="50"
                    Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.SwitchToMainCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                <materialIcons:MaterialIcon Kind="KeyboardReturn"
                                            Width="24"
                                            Height="24" />
            </Button>
        </Grid>

        <Grid Background="{DynamicResource MainContentBackgroundBrush}" Grid.Row="1" Margin="0,0,0,5">
            <hc:Gravatar Width="100"
                         Height="100"
                         Style="{StaticResource GravatarCircle}"
                         Grid.Column="0" />
            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="70,70,0,0"
                    Width="46"
                    Height="46"
                    BorderThickness="0"
                    x:Name="OpenEditImageContext"
                    Click="OpenEditImageContext_Click"
                    Background="{DynamicResource PrimaryBrush}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="32" Height="32" Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <materialIcons:MaterialIcon Kind="Camera"
                                            Width="18"
                                            Height="18"
                                            Foreground="White" />
                <Button.ContextMenu>
                    <ContextMenu Placement="Right"
                                 HorizontalOffset="30"
                                 VerticalOffset="-30">
                        <MenuItem Header="Chọn ảnh"
                                  FontWeight="Medium"
                                  FontSize="14">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon Kind="Image"
                                                            Width="18"
                                                            Height="18" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Chụp ảnh"
                                  FontWeight="Medium"
                                  FontSize="14">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon Kind="Camera"
                                                            Width="18"
                                                            Height="18" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Xoá ảnh"
                                  Foreground="{DynamicResource DangerBrush}"
                                  FontWeight="Medium"
                                  FontSize="14">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon Kind="DeleteEmpty"
                                                            Width="18"
                                                            Height="18" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>

        <Grid Background="{DynamicResource MainContentBackgroundBrush}" Grid.Row="2" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <materialIcons:MaterialIcon Kind="Bio"
                                        Height="28"
                                        Width="28"
                                        Margin="5"
                                        Grid.Column="0" />
            <TextBox Grid.Column="1"
                     Style="{StaticResource TextBoxExtend}"
                     hc:InfoElement.Placeholder="Nội dung tiểu sử"
                     FontSize="14"
                     BorderThickness="0"
                     Background="Transparent" />
        </Grid>

        <StackPanel Background="{DynamicResource MainContentBackgroundBrush}"
                    Grid.Row="3"
                    Margin="0,5,0,0">
            <ToggleButton x:Name="ToggleUsernameEdit"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Height="46">
                <Grid Width="390">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="At"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Tên người dùng"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="@VoNguyenGiaHuy"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleUsernameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox Margin="5"
                                FontSize="14"
                                Height="36"
                                Padding="25,0,0,0"
                                Style="{StaticResource TextBoxExtend}"
                                hc:InfoElement.Placeholder="Tên người dùng"
                                hc:InfoElement.Necessary="True">
                        <hc:TextBox.Text>
                            <Binding Path="EditUsername" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule Pattern="^[a-zA-Z0-9._]{3,16}$"
                                                  ErrorContent="Định dạng tên người dùng sai" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                    <TextBlock Text="@"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Width="16"
                               FontSize="16"
                               Margin="10,0,0,0" />
                </Grid>
                <DockPanel HorizontalAlignment="Right"
                           Grid.Row="1"
                           Margin="5">
                    <Button Content="Huỷ"
                            FontSize="14"
                            Width="50"
                            Height="32"
                            Margin="0,0,10,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleUsernameEdit"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                     Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="Lưu"
                            FontSize="14"
                            Width="50"
                            Height="32" />
                </DockPanel>
            </Grid>
            <ToggleButton x:Name="ToggleFullNameEdit"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Height="46">
                <Grid Width="390">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="AccountCircle"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Họ và tên"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="Võ Nguyễn Gia Huy"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleFullNameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
            </Grid>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleFullNameEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox Margin="5"
                             FontSize="14"
                             Height="36"
                             Grid.Column="0"
                             Style="{StaticResource TextBoxExtend}"
                             hc:InfoElement.Placeholder="Họ" />
                    <TextBox Margin="5"
                             FontSize="14"
                             Height="36"
                             Grid.Column="1"
                             Style="{StaticResource TextBoxExtend}"
                             hc:InfoElement.Placeholder="Tên" />
                </Grid>
                <DockPanel HorizontalAlignment="Right"
                           Grid.Row="1"
                           Margin="5">
                    <Button Content="Huỷ"
                            FontSize="14"
                            Width="50"
                            Height="32"
                            Margin="0,0,10,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleFullNameEdit"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                     Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="Lưu"
                            FontSize="14"
                            Width="50"
                            Height="32" />
                </DockPanel>
            </Grid>
            <ToggleButton x:Name="ToggleEmailEdit"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Height="46">
                <Grid Width="390">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="EmailBox"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Email"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="kh0anh@protonmail.com"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleEmailEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox Margin="5"
                                FontSize="14"
                                Height="36"
                                Style="{StaticResource TextBoxExtend}"
                                hc:InfoElement.Placeholder="Email"
                                hc:InfoElement.Necessary="True">
                        <hc:TextBox.Text>
                            <Binding Path="EditEmail" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule Type="Mail"
                                                  ErrorContent="Định dạng email sai" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                </Grid>
                <DockPanel HorizontalAlignment="Right"
                           Grid.Row="1"
                           Margin="5">
                    <Button Content="Huỷ"
                            FontSize="14"
                            Width="50"
                            Height="32"
                            Margin="0,0,10,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleEmailEdit"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                     Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="Lưu"
                            FontSize="14"
                            Width="50"
                            Height="32" />
                </DockPanel>
            </Grid>
            <ToggleButton x:Name="TogglePhoneNumberEdit"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Height="46">
                <Grid Width="390">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="Call"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Số điện thoại"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="09199199199"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=TogglePhoneNumberEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:TextBox Margin="5"
                                FontSize="14"
                                Height="36"
                                Style="{StaticResource TextBoxExtend}"
                                hc:InfoElement.Placeholder="Số điện thoại"
                                hc:InfoElement.Necessary="True">
                        <hc:TextBox.Text>
                            <Binding Path="EditEmail" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <hc:RegexRule Pattern="^(\+84|0)(3|5|7|8|9)\d{8}$"
                                                  ErrorContent="Định dạng số điện thoại sai" />
                                </Binding.ValidationRules>
                            </Binding>
                        </hc:TextBox.Text>
                    </hc:TextBox>
                </Grid>
                <DockPanel HorizontalAlignment="Right"
                           Grid.Row="1"
                           Margin="5">
                    <Button Content="Huỷ"
                            FontSize="14"
                            Width="50"
                            Height="32"
                            Margin="0,0,10,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="TogglePhoneNumberEdit"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                     Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="Lưu"
                            FontSize="14"
                            Width="50"
                            Height="32" />
                </DockPanel>
            </Grid>
            <ToggleButton x:Name="ToggleBirthdayEdit"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Height="46">
                <Grid Width="390">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="Cake"
                                                Height="28"
                                                Width="28"
                                                Margin="3,0,10,0"
                                                Grid.Column="0" />
                    <TextBlock Text="Ngày sinh"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Grid.Column="1" />
                    <TextBlock Text="10/11/2004"
                               FontWeight="Medium"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Right"
                               Grid.Column="2" />
                </Grid>
            </ToggleButton>
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ToggleBirthdayEdit}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <hc:DatePicker Margin="5"
                                   FontSize="14"
                                   Padding="8"
                                   SelectedDate="{Binding EditBirthday, Mode=TwoWay}"/>
                </Grid>
                <DockPanel HorizontalAlignment="Right"
                           Grid.Row="1"
                           Margin="5">
                    <Button Content="Huỷ"
                            FontSize="14"
                            Width="50"
                            Height="32"
                            Margin="0,0,10,0">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="ToggleBirthdayEdit"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                     Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="Lưu"
                            FontSize="14"
                            Width="50"
                            Height="32" />
                </DockPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>