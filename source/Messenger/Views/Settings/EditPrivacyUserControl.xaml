<UserControl
    x:Class="Messenger.Views.Settings.EditPrivacyUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Settings"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Messenger.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditPrivacyViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="320"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="0,0,0,5"
            Background="{DynamicResource MainContentBackgroundBrush}">
            <Button
                Width="50"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToMainCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                <materialIcons:MaterialIcon
                    Width="24"
                    Height="24"
                    Kind="KeyboardReturn" />
            </Button>
        </Grid>
        <StackPanel Grid.Row="1" Background="{DynamicResource MainContentBackgroundBrush}">
            <TextBlock
                Margin="5,5,5,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Quyền riêng tư" />
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    DisplayMemberPath="PrivacyTitle"
                    FontSize="14"
                    FontWeight="Medium"
                    ItemsSource="{Binding PrivacyOptions}"
                    SelectedItem="{Binding SelectedActiveStatus, Mode=TwoWay}">
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Trạng thái hoạt động" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium"
                    ItemsSource="{Binding PrivacyOptions}"
                    SelectedItem="{Binding ActiveStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Tiểu sử" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Số điện thoại" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Email" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Ngày sinh" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Gọi điện" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Mời vào nhóm" />
            </Grid>
            <Grid>
                <hc:ComboBox
                    Grid.Column="1"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium">
                    <ComboBoxItem Content="Ẩn" />
                    <ComboBoxItem Content="Liên hệ" />
                    <ComboBoxItem Content="Công khai" />
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource ComboBoxPlusBaseStyle}" TargetType="hc:ComboBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="Nhắn tin" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>