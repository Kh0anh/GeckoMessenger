<UserControl x:Class="Messenger.Views.Settings.EditPrivacyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Messenger.Views.Settings"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Background="{DynamicResource MainContentBackgroundBrush}" 
              Grid.Row="0"
              Margin="0,0,0,5">
            <Button HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Width="50"
                    Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.SwitchToMainCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                <materialIcons:MaterialIcon Kind="KeyboardReturn"
                                            Width="24"
                                            Height="24" />
            </Button>
        </Grid>
        <StackPanel Grid.Row="1"
              Background="{DynamicResource MainContentBackgroundBrush}">
            <TextBlock Text="Quyền riêng tư"
                       Margin="5,5,5,10"
                       FontWeight="Bold"
                       FontSize="16"/>
            <Grid>
                <hc:ComboBox Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Right"
                          Padding="8"
                          FontSize="14"
                          FontWeight="Medium"
                          BorderThickness="0">
                    <ComboBoxItem Content="Ẩn"/>
                    <ComboBoxItem Content="Liên hệ"/>
                    <ComboBoxItem Content="Công khai"/>
                    <ComboBox.Style>
                        <Style TargetType="hc:ComboBox" BasedOn="{StaticResource ComboBoxPlusBaseStyle}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource SecondaryRegionBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock Text="Trạng thái hoạt động"
                           Margin="5"
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Left"/>
            </Grid>
            <Grid>
                <hc:ComboBox Grid.Column="1"
                             HorizontalAlignment="Stretch"
                             HorizontalContentAlignment="Right"
                             Padding="8"
                             FontSize="14"
                             FontWeight="Medium"
                             BorderThickness="0">
                    <ComboBoxItem Content="Ẩn"/>
                    <ComboBoxItem Content="Liên hệ"/>
                    <ComboBoxItem Content="Công khai"/>
                    <ComboBox.Style>
                        <Style TargetType="hc:ComboBox" BasedOn="{StaticResource ComboBoxPlusBaseStyle}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource SecondaryRegionBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock Text="Tiểu sử"
                           Margin="5"
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Left"/>
            </Grid>
            <Grid>
                <hc:ComboBox Grid.Column="1"
                             HorizontalAlignment="Stretch"
                             HorizontalContentAlignment="Right"
                             Padding="8"
                             FontSize="14"
                             FontWeight="Medium"
                             BorderThickness="0">
                    <ComboBoxItem Content="Ẩn"/>
                    <ComboBoxItem Content="Liên hệ"/>
                    <ComboBoxItem Content="Công khai"/>
                    <ComboBox.Style>
                        <Style TargetType="hc:ComboBox" BasedOn="{StaticResource ComboBoxPlusBaseStyle}">
