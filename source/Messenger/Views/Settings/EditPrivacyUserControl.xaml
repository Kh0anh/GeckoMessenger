                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource SecondaryRegionBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock Text="Nhắn tin"
                           Margin="5"
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Left"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>