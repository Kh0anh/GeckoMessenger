                <TextBlock Text="Ngày sinh"
                           Margin="5"
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Left"/>
            </Grid>
            <Grid>
                <hc:ComboBox Grid.Column="1"
                             HorizontalAlignment="Stretch"
