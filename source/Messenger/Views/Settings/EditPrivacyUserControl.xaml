                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{DynamicResource SecondaryRegionBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </hc:ComboBox>
                <TextBlock Text="Số điện thoại"
                           Margin="5"
                           FontSize="14"
                           FontWeight="Medium"
                           HorizontalAlignment="Left"/>
            </Grid>
            <Grid>
                <hc:ComboBox Grid.Column="1"
                             HorizontalAlignment="Stretch"
