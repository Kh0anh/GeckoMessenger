<UserControl
    x:Class="Messenger.Views.Settings.ChangePasswordUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Messenger.Views.Settings"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Messenger.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ChangePasswordViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource MainContentBackgroundBrush}">
            <Button
                Width="50"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DataContext.SwitchToMainCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                <materialIcons:MaterialIcon
                    Width="24"
                    Height="24"
                    Kind="KeyboardReturn" />
            </Button>
        </Grid>

        <Grid Grid.Row="1" Background="{DynamicResource MainContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,5,0,10"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Medium"
                Text="ĐỔI MẬT KHẨU" />
            <!--
            <TextBlock Text="Mật khẩu hiện tại"
                       FontWeight="Medium"
                       FontSize="14"
                       Grid.Column="0"
                       Grid.Row="1"
                       Margin="5,2,0,3"
                       VerticalAlignment="Center"/>
            -->
            <hc:PasswordBox
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Width="368"
                Height="66"
                Margin="10,5,0,6"
                HorizontalAlignment="Left"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Title="Mật khẩu hiện tại"
                hc:InfoElement.TitlePlacement="Top"
                FontSize="14"
                FontWeight="Medium"
                IsSafeEnabled="False"
                ShowEyeButton="True"
                UnsafePassword="{Binding OldPassword, Mode=TwoWay}" />
            <!--
            <TextBlock Text="Mật khẩu mới"
                       FontWeight="Medium"
                       FontSize="14"
                       Grid.Column="0"
                       Grid.Row="2"
                       Margin="5,2,0,3"
                       VerticalAlignment="Center"/>
            -->
            <hc:PasswordBox
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="368"
                Height="66"
                Margin="10,5,0,6"
                HorizontalAlignment="Left"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Title="Mật khẩu mới"
                hc:InfoElement.TitlePlacement="Top"
                FontSize="14"
                FontWeight="Medium"
                IsSafeEnabled="False"
                ShowEyeButton="True"
                UnsafePassword="{Binding NewPassword, Mode=TwoWay}" />
            <!--
            <TextBlock Text="Xác nhận mật khẩu"
                       FontWeight="Medium"
                       FontSize="14"
                       Grid.Column="0"
                       Grid.Row="3"
                       Margin="5,2,0,3"
                       VerticalAlignment="Center"/>
            -->
            <hc:PasswordBox
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Width="368"
                Height="66"
                Margin="10,5,0,6"
                HorizontalAlignment="Left"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Title="Xác nhận mật khẩu"
                hc:InfoElement.TitlePlacement="Top"
                FontSize="14"
                FontWeight="Medium"
                IsSafeEnabled="False"
                ShowEyeButton="True"
                UnsafePassword="{Binding ConfirmPassword, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="5,0,0,5"
                HorizontalAlignment="Left"
                FontSize="14"
                FontWeight="Medium"
                Foreground="{DynamicResource DangerBrush}"
                Text="{Binding Error, Mode=OneWay}">
                <TextBlock.Style>
                    <Style BasedOn="{StaticResource TextBlockBaseStyle}" TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Error}" Value="">
                                <Setter Property="Visibility" Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Button
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Width="120"
                Height="42"
                Margin="0,6,12,10"
                HorizontalAlignment="Center"
                hc:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource PrimaryDarkBrush}"
                hc:BorderElement.CornerRadius="20"
                Command="{Binding ChangePasswordCommand}"
                Content="Cập nhật"
                FontSize="14"
                FontWeight="Medium"
                Style="{StaticResource ButtonPrimary}" />
        </Grid>
    </Grid>
</UserControl>
